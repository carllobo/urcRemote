<?xml version="1.0" encoding="utf-8"?>
<manifest package="carl.urc.android"
      android:versionName="0.1" android:versionCode="0" xmlns:android="http://schemas.android.com/apk/res/android">
    <application 
    android:icon="@drawable/icon" android:name="UrcAndroidApp" android:description="@string/app_name" android:label="@string/app_name">
        

    <activity android:name=".activity.WelcomeActivity">
<intent-filter android:label="urc Remote"><category android:name="android.intent.category.LAUNCHER"></category>
<action android:name="android.intent.action.MAIN"></action>
</intent-filter>
</activity>

<activity android:name=".activity.TouchPadActivity" android:screenOrientation="portrait" android:permission="android.permission.VIBRATE">
<intent-filter android:label="@layout/touchpad"><category android:name="android.intent.category.DEFAULT"></category>
<action android:name="carl.urc.android.MOUSE"></action>
</intent-filter>
</activity>
</application>
    <uses-sdk android:minSdkVersion="7" />

<uses-permission android:name="android.permission.VIBRATE"></uses-permission>

<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
</manifest> 